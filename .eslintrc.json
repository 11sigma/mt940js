{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    // "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi":   ["error", "always", { "omitLastInOneLineBlock": true}],
    "no-console": "off"
  }
}
